// you can write to stdout for debugging purposes, e.g.
// console.log('this is a debug message');

function solution(S) {
    let patchCount = 0;
    let i = 0;

    while(i < S.length){
        if(S[i] === 'X'){
            patchCount++;
            i += 3
        }
        else{
            i++
        }
    }

    return patchCount
}
